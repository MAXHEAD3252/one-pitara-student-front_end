{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@progress/kendo-intl": ["./node_modules/@progress/kendo-intl"],
      "@progress/kendo-popup-common": ["./node_modules/@progress/kendo-popup-common"],
      "@progress/kendo-react-animation": ["./node_modules/@progress/kendo-react-progressbars/index.mjs"],
      // Add other paths if needed
    },

    /* Bundler mode */
    
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
